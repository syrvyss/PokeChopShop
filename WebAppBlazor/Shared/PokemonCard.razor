@code {

    [Parameter] public string UrlRedirect { get; set; }

    [Parameter] public int PokemonId { get; set; }

    [Parameter] public string PokemonName { get; set; }

    [Parameter] public string SpriteUrl { get; set; }

    [Parameter] public int PokemonWeight { get; set; }

}

<div class="card border-0 flex-grow-1 col-6 col-md-4 col-lg-3 text-bg-dark border-2 border-light">
    <img src="@SpriteUrl" class="card-img bg-light" alt="...">
    <a href="@UrlRedirect/@PokemonId" class="card-img-overlay d-flex flex-column justify-content-between text-decoration-none text-black dark_hover border-2">
        <div class="d-flex justify-content-between">
            <small>
                <p>Organic</p>
            </small>
            <small>
                <p>Save up to 20%!</p>
            </small>
        </div>
        <div class="d-flex justify-content-between">
            <h2 class="card-title fw-bolder">@PokemonName</h2>
            <p class="card-text text-center fst-italic d-block my-auto text-decoration-underline fs-5" style="text-decoration-style: wavy;">@PokemonWeight</p>
        </div>
    </a>
</div>