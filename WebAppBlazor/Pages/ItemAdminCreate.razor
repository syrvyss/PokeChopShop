@page "/admin/shop/itempage/create"

@inject NavigationManager NavigationManager
@inject HttpClient HttpClient

@using WebAppBlazor.Entities
@using PokeShop.Shared.Dto
@using WebAppBlazor.Services

@code {

    PokemonViewModel _pokemonViewModel = new()
    {
        Pokemon = new PokemonDto(),
        PokemonStats = new PokemonStatsDto()
    };

    private async void OnSubmit()
    {
        var httpHelper = new HttpHelper(HttpClient);

        // await httpHelper.PostAsync<PokemonDto>($"/api/Pokemon/", _pokemonViewModel.Pokemon);
        // await httpHelper.PostAsync<PokemonStatsDto>($"/api/PokemonStats/", _pokemonViewModel.PokemonStats);

        await httpHelper.PostAsync<PokemonViewModel>($"/api/Pokemon/AddFull", _pokemonViewModel);

        NavigationManager.NavigateTo("/admin");
    }

}

<body class="mb-0">
<section class="container-fluid vh-100">
    <div class="row vh-100">
        <div class="col-md-8">
            <img class="w-100 bg-light rounded placeholder placeholder-glow h-100" aria-hidden="true" src="" alt="">
        </div>
        <div class="col-md-4 d-flex flex-column gap-4">
            <EditForm Model="_pokemonViewModel" class="d-flex flex-column gap-2" OnSubmit="@OnSubmit">
                <div class="input-group">
                    <span class="input-group-text fs-4">Name</span>
                    <InputText @bind-Value="_pokemonViewModel.Pokemon.Name" class="form-control fs-4" id="floatingInputValue" placeholder="Name"/>
                </div>

                <label class="form-label fw-bolder">Weight:</label>
                <div class="btn-group w-100">
                    <input disabled type="radio" value="1" class="btn-check" id="weightOption1" autocomplete="off">
                    <label class="btn btn-outline-dark rounded-0" for="weightOption1">1/3</label>

                    <input disabled type="radio" value="2" class="btn-check" id="weightOption2" autocomplete="off">
                    <label class="btn btn-outline-dark rounded-0" for="weightOption2">2/3</label>

                    <input disabled type="radio" value="3" class="btn-check" id="weightOption3" autocomplete="off">
                    <label class="btn btn-outline-dark rounded-0" for="weightOption3">3/3</label>
                </div>

                <input class="btn btn-dark rounded-0 w-100" type="submit" value="Submit!">

                <label class="form-label">Price is based off weight, one Â¥ per gram.</label>

                <div class="accordion" id="accordionDetails">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Product Details
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionDetails">
                            <div class="accordion-body d-flex flex-wrap gap-2">
                                <div class="input-group">
                                    <span class="input-group-text">Sprite url</span>
                                    <InputText @bind-Value="@_pokemonViewModel.Pokemon.Sprite" class="form-control fs-4" placeholder="Sprite"/>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text">Experience</span>
                                    <InputNumber @bind-Value="@_pokemonViewModel.PokemonStats.Experience" TValue="int" type="number" class="form-control fs-4" placeholder="Experience"/>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text">Height</span>
                                    <InputNumber @bind-Value="@_pokemonViewModel.PokemonStats.Height" TValue="int" type="number" class="form-control fs-4" placeholder="Height"/>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text">Weight</span>
                                    <InputNumber @bind-Value="@_pokemonViewModel.PokemonStats.Weight" TValue="int" type="number" class="form-control fs-4" placeholder="Weight"/>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text">Description</span>
                                    <InputText @bind-Value="@_pokemonViewModel.PokemonStats.Description" TValue="int" type="text" class="form-control fs-4" placeholder="Description"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Payment & Shipping
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionDetails">
                            <div class="accordion-body d-flex flex-wrap gap-2">
                                <p class="col-lg-5 flex-grow-1 d-flex flex-column">
                                    <strong>Payment</strong>We only accept crypto and other untraceable currencies.
                                </p>
                                <p type="tooltip" title="or however long it takes to arrive from china" class="col-lg-5 flex-grow-1 d-flex flex-column">
                                    <strong >Shipping</strong>Our shipping can take as little as 2 days!
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</section>
</body>