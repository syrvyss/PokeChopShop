@page "/admin"

@inject HttpClient HttpClient

@using PokeShop.Shared.Dto;
@using WebAppBlazor.Services

@layout EmptyLayout

@code {
    List<PokemonDto> Pokemon { get; set; } = new();
    List<OrderDto> Orders { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        var httpHelper = new HttpHelper(HttpClient);

        try
        {
            Pokemon = await httpHelper.GetAsync<IEnumerable<PokemonDto>>("/api/Pokemon") as List<PokemonDto>;
            Orders = await httpHelper.GetAsync<IEnumerable<OrderDto>>("/api/Order") as List<OrderDto>;

            if (Pokemon.Any())
                Pokemon = Pokemon.OrderBy(x => x.Id).ToList();
            if (Orders.Any())
                Orders = Orders.OrderBy(x => x.Id).ToList();
        }
        catch (HttpRequestException e)
        {
            throw;
        }
    }

    async void OnDeletePokemon(int id)
    {
        Pokemon = Pokemon.Where(x => x.Id != id).ToList();

        var httpHelper = new HttpHelper(HttpClient);
        await httpHelper.DeleteAsync($"/api/Pokemon/{id}");
    }

    async void OnDeleteOrder(int id)
    {
        Orders = Orders.Where(x => x.Id != id).ToList();

        var httpHelper = new HttpHelper(HttpClient);
        await httpHelper.DeleteAsync($"/api/Order/{id}");
    }

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/PokeChopShop.styles.css" asp-append-version="true"/>
    <title>Admin Page</title>
</head>

<body class="mb-0">
<div class="container-fluid vh-100 border-bottom border-dark m-0 p-0 overflow-hidden">
    <div class="row w-auto me-0 border-bottom border-dark d-flex justify-content-end position-sticky">
        <a href="/" class="btn-close p-4" aria-label="CloseWindow"></a>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="scrollable w-75 mx-auto my-5">
                <h4 class="fw-bolder" id="pokemonTitle">Pokemon</h4>

                <div class="d-flex flex-column border-dark border-bottom">
                    @foreach (var item in Pokemon)
                    {
                        <ListItem DeleteItem="@OnDeletePokemon" Title="@item.Name" Id="@item.Id" Link=@($"/admin/shop/itempage/{item.Id}")/>
                    }
                    <a href="/admin/shop/itempage/create" class="border-top border-dark border-start border-end text-decoration-none d-flex justify-content-between">
                        <li class="list-group-item bg-light mx-auto border-0 bg-white text-black-50">+</li>
                    </a>
                </div>

                <h4 class="fw-bolder mt-5" id="pokemonTitle">Orders</h4>

                <div class="d-flex flex-column border-dark border-bottom">
                    @foreach (var item in Orders)
                    {
                        <ListItem DeleteItem="@OnDeleteOrder" Title="@item.Email" Id="@item.Id" Link=@($"/admingT/order/{item.Id}")/>
                    }
                    <a href="/shop/" class="border-top border-dark border-start border-end text-decoration-none d-flex justify-content-between">
                        <li class="list-group-item bg-light mx-auto border-0 bg-white text-black-50">+</li>
                    </a>
                </div>
            </div>
        </div>

        <div class="d-flex flex-column col-md-4 p-0 border-start border-dark vh-100">
            <div class="border-bottom border-dark p-3">
                <p class="my-auto fs-4 fw-bolder">Overview</p>
            </div>

            <div class="scrollable">
                <div>
                    <div class="p-3">
                        <p class="fw-bold">Pokemon</p>
                        <div class="px-4">
                            @foreach (var item in Pokemon)
                            {
                                <p>@item.Name</p>
                            }
                        </div>
                    </div>
                    <div class="p-3">
                        <p class="fw-bold">Orders</p>
                        <div class="px-4">
                            @foreach (var item in Orders)
                            {
                                <p>@item.Email</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>